class Solution {
    public long distinctNames(String[] ideas) {
        var group = new Set[26];
        for (var i = 0; i < 26; i++) 
            group[i] = new HashSet<String>();
        for (var s : ideas) 
            group[s.charAt(0) - 'a'].add(s.substring(1));
        var ans = 0L;
        for (var i = 1; i < 26; ++i)
            for (var j = 0; j < i; ++j) {
                var m = 0;
                for (var s : group[i])
                    if (group[j].contains(s)) ++m;
                ans += (long) (group[i].size() - m) * (group[j].size() - m);
            }
        return ans * 2;
    }
}
